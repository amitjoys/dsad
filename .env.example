# ConstructPune Environment Variables Example
# Copy this file to .env and update the values for your environment

# Database Configuration
MONGO_URL=mongodb://admin:your_secure_mongodb_password@mongodb:27017/constructpune_db?authSource=admin
MONGO_PASSWORD=your_secure_mongodb_password

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-minimum-32-characters-long-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
ENVIRONMENT=production
DEBUG=false
DOMAIN_NAME=constructpune.in
PROTOCOL=https

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# Email Configuration (for contact forms and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@constructpune.in

# API Configuration
API_TITLE=ConstructPune API
API_VERSION=1.0.0
API_DESCRIPTION=Construction Cost Calculator and Project Management API

# CORS Configuration
ALLOWED_ORIGINS=https://constructpune.in,https://www.constructpune.in
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Origin,X-Requested-With,Content-Type,Accept,Authorization

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/constructpune/app.log

# External API Keys (optional)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# WEATHER_API_KEY=your-weather-api-key

# SSL Configuration
# SSL_CERT_PATH=/etc/ssl/certs/constructpune.crt
# SSL_KEY_PATH=/etc/ssl/private/constructpune.key

# Monitoring and Analytics (optional)
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30

# Performance Configuration
WORKERS=4
MAX_CONNECTIONS=1000
KEEP_ALIVE=2

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Cookie Configuration
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour

# Company Information
COMPANY_NAME=ConstructPune
COMPANY_EMAIL=info@constructpune.in
COMPANY_PHONE=+91-1234567890
COMPANY_ADDRESS=123 Construction Street, Pune, Maharashtra 411001, India

# Social Media Links (optional)
FACEBOOK_URL=https://facebook.com/constructpune
TWITTER_URL=https://twitter.com/constructpune
LINKEDIN_URL=https://linkedin.com/company/constructpune
INSTAGRAM_URL=https://instagram.com/constructpune